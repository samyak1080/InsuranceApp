<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MySpace">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="7dp"
        android:id="@+id/Submitted"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SUBNOTI"
                android:drawableLeft="@drawable/ic_submited"
                android:layout_margin="10dp"

                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/APPROVED"
        android:layout_marginTop="7dp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/APPNOTI"
                android:drawableLeft="@drawable/ic_approved"
                android:layout_margin="10dp"

                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/ON_HOLD"
        android:layout_marginTop="7dp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/OHNOTI"
                android:drawableLeft="@drawable/ic_on_hold"
                android:layout_margin="10dp"

                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/REJECTED"
        android:layout_marginTop="7dp"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/REJNOTI"
                android:drawableLeft="@drawable/ic_rejected"
                android:layout_margin="10dp"

                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>